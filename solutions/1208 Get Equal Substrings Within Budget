class Solution {
public:
    int equalSubstring(string s, string t, int maxCost) {
        int n = s.size(), i = 0, j = 0, maxLen = 0;
        while(j < n) {
            maxCost -= abs(s[j] - t[j]);
            j++;
            if (maxCost < 0){
                maxCost += abs(s[i] - t[i]);
                i++;
            }
            maxLen = max(maxLen, j-i);
        }
        return maxLen;   // can return j-i, in this case.
    }
};
