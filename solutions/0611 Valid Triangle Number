class Solution:
    def triangleNumber(self, nums: List[int]) -> int:
        n = len(nums)
        count = 0
        nums.sort()
        for k in range(n-1, 1, -1): # range(2, n)[::-1]
            i, j = 0, k-1
            while i<j:
                if nums[i] + nums[j] > nums[k]:
                    count += j - i
                    j -= 1
                else: 
                    i += 1
        return count
